<% @stations.each do |station| %>
<h3>
<%= "最寄り駅#{n += 1}" %>
</h3>


<p>
  <strong>路線名</strong>
  <%= station.line %>
</p>

<p>
  <strong>駅名</strong>
  <%= station.name %>
</p>

<p>
  <strong>徒歩分数</strong>
  <%= station.minute %>
</p>

<% end %>

